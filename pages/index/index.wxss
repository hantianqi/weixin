/*商品介绍*/
.goods,.goods-body,.goods1,.coll-title,.cus-title{
  text-align: center;
  display:flex;
  flex-direction: column;
}
.goods-title{
  margin:10px 0;
  font-size:20px;
}
.goods1{
  background:url("http://127.0.0.1:3000/img/index/AFEI0rQbEAQYACCpja-fBSikpoLQBTDuBTj8AkBl.png");
  backgeound-width:100%;
}
.goods-img{
  width:100%;
  height:141px;
}
.goods1-title,.coll-title,.cus-title{
  margin:10px;
  font-size:17px;
}
.goods1-body{
  margin:5px 15px;
