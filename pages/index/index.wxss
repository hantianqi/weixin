}
.coll3-body{
  margin-bottom:-5px;
}
.coll1-img image{
  width:187px;
  height:115px;
}
.coll1-intr{
  width:50%;
  height:85px;
  padding-top:30px;
  background:url(http://127.0.0.1:3000/img/index/AFEI0rQbEAQYACDXkq-fBSizsv6dAjD3AjjlAUBl.png);
  background-width:100%;
}
.coll1-intr text{
  text-align: center;
  display:block;
}
.coll1-title{
  font-size:17px;
}
.coll1-details{
  font-size:15px;
  color:#aaa;
}

