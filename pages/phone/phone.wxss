/* pages/phone/phone.wxss */
.input{
  border-top:1px solid #ddd;
  padding:10px 20px;
}
.input view{
  font-size:15px;
  margin:20px 0;
}
.input view input,textarea{
  background:#F7F7F7;
  border-radius:5px;
  padding:10px;
  margin:5px 0;
  font-size:12px;
}
.ify>view{
  display:flex;
  flex-wrap: wrap;
}
view.ify button{
  width:100px;
  margin:5px;
}

.click-tj{
  background:rgb(87, 190, 173);
  color:#fff;
}

/*成品赏析*/
.app-img{
  text-align: center;
  border-top:1px solid rgb(240, 240, 240);
}
.app-img image{
  width:345px;
  height:190px;
  border-radius: 10px;
  margin-top:10px;
}
.app-title{
  position:relative;
  left:15px;
  bottom:40px;
  width:335px;
  background-color:rgba(0,0,0,0.5);
  color:#fff;
  z-index:100;
  border-radius:0 0 10px 10px;
  padding:5px 0;
  padding-left:10px;
}
.btn{
  width: 150rpx;
  height: 70rpx;
  font-size: 24rpx;
  padding: 0;
  border: 1px solid #dcdcdc;
  background: #fff;
  border-radius: 4px;
  margin: 15rpx 10rpx;
  text-align: center;
}
.btn-selected{
  border: 1px solid #000;
}
