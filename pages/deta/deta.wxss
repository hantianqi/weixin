/* pages/deta/deta.wxss */
.view-height{
  margin-bottom:-50px;
}
.deta-img{
  width:375px;
  height:200px;
}
.deta-img image{
  width:100%;
  height:100%;
}
.tj-tit{
  position:relative;
  bottom:125px;
  width:100%;
  background:rgba(0,0,0,0.2);
  color:#fff;
  padding:10px;
  font-size:15px;
}

scroll-view,scroll-view view{
  display:inline-block;
  overflow:hidden;
  white-space:nowrap;
}
.xq-title{
  border-bottom:1px solid rgb(240, 240, 240);
  padding-bottom:10px;
}
.deta-body{
  margin:20px;
}
.deta-body text{
  font-size:17px;
  color:#A1B8DA;
}
.view-back{
  height:25px;
}

.tab{
  display:flex;
  margin-top:3px;
}
.tab-block{
  margin:10px;
  margin-left:20px;
}
.tab>view:first-child{
  margin-left:30px;
}
.tab-block image{
  display:block;
  width:24px;
  height:20px;
  margin-bottom:-5px;
}
.tab-block text{
  font-size:12px;
}
.tab-block button{
  width:170px;
  font-size:15px;
  background:#57BEAD;
  border:0;
  color:#fff;
}
.home image{
  padding-left:7px;
  padding-top:6px;
}
.cur{
  border: 2px solid #EDB7BF;
}
.deta-list image{
  width:62px;
  height:46px;
  border-radius:5px;
  margin:10px;
  z-index:100;
}